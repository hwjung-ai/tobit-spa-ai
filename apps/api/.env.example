APP_ENV=dev
API_PORT=8000
DEFER_HEAVY_STARTUP=true
ENABLE_AUTO_MIGRATE=true
ENABLE_RESOURCE_WATCHER=true
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

OPS_MODE=mock
OPS_ENABLE_LANGGRAPH=false
OPS_DEFAULT_SOURCE_ASSET=primary_postgres
OPS_DEFAULT_SCHEMA_ASSET=primary_postgres_schema
OPS_DEFAULT_RESOLVER_ASSET=default_resolver
ENABLE_SYSTEM_APIS=false
ENABLE_DATA_EXPLORER=true
OPS_ENABLE_CEP_SCHEDULER=false
NEXT_PUBLIC_ENABLE_ASSET_REGISTRY=true

# Simulation & Topology Map
# SIM_MODE=mock: 가상 데이터 사용 (개발/테스트용)
# SIM_MODE=real: Neo4j 실제 데이터 사용 (운영용)
SIM_MODE=mock


PG_HOST=YOUR_PG_HOST
PG_PORT=5432
PG_DB=tobit
PG_USER=tobit_user
PG_PASSWORD=secret

NEO4J_URI=neo4j://YOUR_NEO4J_HOST:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=secret

REDIS_URL=redis://YOUR_REDIS_HOST:6379/0
API_CACHE_BACKEND=auto
API_CACHE_PREFIX=api_cache:
API_CACHE_DEFAULT_TTL_SECONDS=300

DATA_PG_ALLOW_SCHEMAS=public
DATA_PG_ALLOW_TABLES=tb_cep_*,tb_api_*,ci,ci_ext,event_log
DATA_REDIS_ALLOWED_PREFIXES=cep:
DATA_MAX_ROWS=200
DATA_QUERY_TIMEOUT_MS=3000

LANGSMITH_API_KEY=
LANGSMITH_PROJECT=tobit-spa-ai
LANGSMITH_TRACING=false

# LLM Gateway (Admin > Settings can override these at runtime)
CHAT_MODEL=gpt-5-nano
EMBED_MODEL=text-embedding-3-small
OPENAI_API_KEY=
LLM_PROVIDER=openai
LLM_BASE_URL=
LLM_DEFAULT_MODEL=gpt-5-nano
LLM_FALLBACK_MODEL=
LLM_TIMEOUT_SECONDS=120
LLM_MAX_RETRIES=2
LLM_ENABLE_FALLBACK=true
LLM_ROUTING_POLICY=default
LLM_INTERNAL_API_KEY=
API_AUTH_DEFAULT_MODE=jwt_only
API_AUTH_ENFORCE_SCOPES=true
ENABLE_PERMISSION_CHECK=true
DEFAULT_TENANT_ID=default
